<Window x:Class="Checkers.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkers.Windows"
        mc:Ignorable="d"
        Title="Начало игры" Height="300" Width="300" ResizeMode="NoResize" Icon="../Resources/icon.ico">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Image Source="../Resources/checkers.png" Height="100" Width="150" Margin="0 40 0 0"></Image>

        <TextBlock Text="Шашки" FontFamily="Comic Sans MS" FontSize="24" TextAlignment="Center" Height="30" Width="150" VerticalAlignment="Top" Margin="20"></TextBlock>

        <Button Content="Играть" Height="30" Width="150" Grid.Row="1" FontFamily="Comic Sans MS" FontSize="18" Click="StrtButton_Click"/>
        <Button Content="Справка" Height="30" Width="150" Grid.Row="2" FontFamily="Comic Sans MS" FontSize="18" Click="HelpButton_Click_1"/>
    </Grid>
</Window>
